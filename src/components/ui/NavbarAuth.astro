---
// Navbar.astro
const { currentPath } = Astro.props;

const links = [
  { path: "/dashboard", text: "Inicio", show: currentPath !== "/dashboard" },
  { path: "/cursos", text: "Cursos", show: currentPath !== "/cursos" },
  { path: "/user", text: "Usuario", show: currentPath !== "/user" },
  { path: "/", text: "Cerrar Sesi√≥n", show: currentPath !== "/" },
  { path: "/about", text: "Sobre Nosotros", show: currentPath !== "/about" },
  { path: "/contacto", text: "Contacto", show: currentPath !== "/contacto" },
];
---

<nav class="bg-blue-600 text-white p-4 flex justify-between">
  <div class="space-x-4">
    {
      links.map(
        (link) =>
          link.show && (
            <a href={link.path} class="hover:underline">
              {link.text}
            </a>
          ),
      )
    }
  </div>
</nav>
